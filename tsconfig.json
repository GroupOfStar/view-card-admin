{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"types": [
			"vite/client"
		],
		"lib": [
			"esnext",
			"dom"
		],
		"plugins": [
			{
				"name": "@vuedx/typescript-plugin-vue"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		".prettierrc.js",
		".eslintrc.js"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/ts-shim.d.ts",
	]
}
